# ENSPD PV Management - Configuration Environment Variables
# Copiez ce fichier en .env et modifiez les valeurs selon vos besoins

# Django Settings
SECRET_KEY=votre-secret-key-tres-securisee-a-generer
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Pour SQLite (par défaut, laissez vide)
DATABASE_URL=

# Pour PostgreSQL (décommentez et configurez)
# DATABASE_URL=postgres://username:password@localhost:5432/enspd_pv

# Email Configuration (optionnel)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=votre-email@exemple.com
EMAIL_HOST_PASSWORD=votre-mot-de-passe

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# Static and Media Files
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Application Settings
MAX_UPLOAD_SIZE=10485760  # 10 MB in bytes
PAGINATION_PER_PAGE=20
